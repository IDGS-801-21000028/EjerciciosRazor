@page
@model EjerciciosRazor.Pages.IMCModel
@{
    ViewData["Title"] = "Calculaora de IMC";
}

<h1>@ViewData["Title"]</h1>


<form method="post">
    <div>
        <label for="peso">Peso (kg):</label>
        <input type="number" id="peso" name="peso" step="0.1" required asp-for="Peso" />       
    </div>
    <div>
        <label for="altura">Altura (m):</label>
        <input type="number" id="altura" name="altura" step="0.1" required asp-for="Altura" />
    </div>
    <button type="submit">Calcular</button>
</form>

@if (Model.IMC > 0)
{
    <h2>Resultado</h2>
    <p>Su IMC es: @Modelo.IMC</p>
    <p>Clasificación: @Model.Clasificacion</p>
    <img src="@Model.ImgReco" alt="Recomendacion"/>
    

}
