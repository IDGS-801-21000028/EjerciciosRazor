@page
@model EjerciciosRazor.Pages.CodificacionCesarModel
@{
    ViewData["Title"] = "Codificador César";
}

<h1>@ViewData["Title"]</h1>

<form method="post" class="form">
    <div class="form-group">
        <label for="mensaje">Mensaje:</label>
        <input type="text" id="mensaje" name="mensaje" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="desplazamiento">Desplazamiento:</label>
        <input type="number" id="desplazamiento" name="desplazamiento" class="form-control" required />
    </div>
    <div class="form-group">
        <button type="submit" name="accion" value="codificar" class="btn btn-primary">Codificar</button>
        <button type="submit" name="accion" value="decodificar" class="btn btn-secondary">Decodificar</button>
    </div>
</form>

@if (Model.Resultado != null)
{
    <h2>Resultado</h2>
    <p class="alert alert-info">@Model.Resultado</p>
}