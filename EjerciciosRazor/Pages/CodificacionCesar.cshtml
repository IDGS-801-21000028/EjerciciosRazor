<h1>@ViewData["Title"]</h1>

<form method="post">
    <div>
        <label for="mensaje">Mensaje:</label>
        <input type="text" id="mensaje" name="mensaje" required />
    </div>
    <div>
        <label for="desplazamiento">Desplazamiento:</label>
